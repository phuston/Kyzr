<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.phuston.android.kyzr.WelcomeActivity"
    android:background="@color/accent">

    <ImageView
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:id="@+id/imageView"
        android:background="@drawable/welcomeflame"
        android:focusable="false"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rectanglebackground"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/bSubmitTorch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTorchName"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/edittextback"
            android:hint="@string/intro_hint"
            android:gravity="center_horizontal"
            android:elevation="5dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_button"
        android:id="@+id/bSubmitTorch"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:elevation="5dp"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
